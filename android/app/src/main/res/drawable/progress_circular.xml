<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景圆环 -->
    <item>
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:thicknessRatio="8"
            android:useLevel="false">
            <solid android:color="#33000000" /> <!-- 背景色 -->
        </shape>
    </item>

    <!-- 进度圆环 -->
    <item>
        <rotate
            android:fromDegrees="-90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="0">
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="8"
                android:useLevel="true"> <!-- 关键属性 -->
                <solid android:color="#ff1EAAFD"/>
            </shape>
        </rotate>
    </item>
</layer-list>