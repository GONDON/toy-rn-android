<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/toys_item_xhy_bg"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="@dimen/dp_16"
    android:id="@+id/ll_root_view"
    >

    <TextView
        android:id="@+id/tv_doll_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff181719"
        android:textSize="24dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_doll_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="#80000000"
        android:textSize="11dp"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <RelativeLayout
        android:id="@+id/rl_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/iv_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_story"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            />

        <TextView
            android:id="@+id/tv_story_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_story"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_story"
            android:text="Story"
            android:textColor="#b3000000"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_story_t"
            android:layout_alignBottom="@+id/iv_story"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_story_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ff181719"
                android:textSize="16dp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.8"
                />

            <TextView
                android:id="@+id/tv_story_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="ä¸ª"
                android:textColor="#80000000"
                android:textSize="10dp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/iv_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_sound"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            />

        <TextView
            android:id="@+id/tv_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_sound"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_sound"
            android:text="@string/duration"
            android:textColor="#b3000000"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignLeft="@+id/tv_length"
            android:layout_alignBottom="@+id/iv_sound"
            >
            <TextView
                android:id="@+id/tv_duration_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#99000000"
                android:textSize="10dp"
                />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="bottom"
        android:background="@drawable/btn_white_selector"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_player" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/preview_listen"
            android:textColor="#e6000000"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>