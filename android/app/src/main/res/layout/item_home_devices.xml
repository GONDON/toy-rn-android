<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/home_model_container_bg"
    android:orientation="vertical"
    android:id="@+id/fl_root"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        >
        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e6000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="60dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            >
            <ImageView
                android:id="@+id/iv_online_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_wifi_online"
                />
            <TextView
                android:id="@+id/tv_online_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Onlion"
                android:textColor="#80000000"
                android:textSize="11dp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_4"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_electricity_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_electricity_green"
                />
            <TextView
                android:id="@+id/tv_electricity_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textColor="#80000000"
                android:textSize="11dp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_4"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="29dp"
        android:layout_height="16dp"
        android:text="1"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/item_mark_right"
        android:layout_gravity="right"
        android:gravity="center"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_check_circle_grey"
        android:padding="12dp"
        android:layout_gravity="right"
        />

    <ImageView
        android:id="@+id/iv_doll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_robot"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="-20dp"
        android:layout_marginRight="-20dp"
        />

</FrameLayout>