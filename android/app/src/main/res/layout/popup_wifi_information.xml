<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/popup_bottom_conner_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_16"
            android:src="@mipmap/icon_x_grey" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_marginTop="24dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi_list_title"
            android:textColor="#e6000000"
            android:textSize="22dp"
            android:textStyle="bold"
            />
        <com.talenpal.talenpalapp.view.ClickableTextView
            android:id="@+id/tv_clickable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#b3000000"
            android:layout_marginTop="@dimen/dp_16"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="26dp"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_wifi_black"
                />
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutCustom"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:background="@color/transparent"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_wifi_name"
                    style="@style/TextInputEditTextCustom"
                    android:hint="@string/wifi_name"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/iv_wifi_change"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_wifi_change"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1a000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_wifi_lock"
                />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutCustom"
                android:layout_height="56dp"
                android:background="@color/transparent"
                app:endIconMode="password_toggle"
                app:endIconCheckable="true"
                app:passwordToggleDrawable="@drawable/password_toggle_drawable"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_wifi_pwd"
                    style="@style/TextInputEditTextCustom"
                    android:inputType="textPassword"
                    android:hint="@string/wifi_password"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1a000000"
            />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/btn_blue_selector"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="24dp"
            />
    </LinearLayout>

</LinearLayout>