<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/toy_guide_top"
        >
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_dialog_close"
            android:padding="@dimen/dp_16"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/toy_guide_bottom"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please place the doll on the story machine. Wait for 5 seconds, and the doll will appear on the home page"
            android:textStyle="bold"
            android:textColor="#e6000000"
            android:textSize="22dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            />
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/btn_blue_selector"
            android:layout_marginBottom="25dp"
            />
    </LinearLayout>
</LinearLayout>